{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Prefix": {
      "type": "string",
      "defaultValue": ""
    },
    "AdminUserName": {
      "type": "string"
    },
    "AdminPassword": {
      "type": "securestring"
    },
    "DomainFQDN": {
      "type": "string"
    },
    "Instance": {
      "type": "int",
      "minValue": 1,
      "maxValue": 4,
      "defaultValue": 1
    },
    "VMSize": {
      "type": "string",
      "defaultValue": "Small",
      "allowedValues": [
        "Small",
        "Medium",
        "Large"
      ]
    },
    "VnetRgName": {
      "type": "string"
    },
    "VnetName": {
      "type": "string"
    },
    "SubnetName": {
      "type": "string"
    },
    "ProfilePath": {
      "type": "string"
    },
    "RegistrationToken": {
      "type": "string"
    },
    "Optimize": {
      "type": "bool",
      "allowedValues": [
        true,
        false
      ]
    },
    "galleryName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Shared Image Gallery."
      }
    },
    "galleryImageDefinitionName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Image Definition."
      }
    },
    "galleryImageVersionName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Image Version - should follow <MajorVersion>.<MinorVersion>.<Patch>."
      }
    }
  },
  "variables": {
    "VM_Images": {
      "Server": {
        "publisher": "MicrosoftWindowsServer",
        "offer": "WindowsServer",
        "sku": "2019-Datacenter-smalldisk",
        "version": "latest"
      },
      "Client": {
        "publisher": "microsoftwindowsdesktop",
        "offer": "office-365",
        "sku": "1903-evd-o365pp",
        "version": "latest"
      }
    },
    "VM_SIZES": {
      "Small": {
        "WVDsize": "Standard_D2s_v3"
      },
      "Medium": {
        "WVDsize": "Standard_D8s v3"
      },
      "Large": {
        "WVDsize": "Standard_D16s_v3"
      }
    },
    "License": {
      "Server": {
        "License": "Windows_Server"
      },
      "Client": {
        "License": "Windows_Client"
      },
      "Multi": {
        "License": "Windows_Client"
      }
    },
    "VMName": "[concat(parameters('Prefix'),'-VM-')]",
    "subnetRef": "[concat(subscription().id,'/resourceGroups/',parameters('VnetRgName'),'/providers/Microsoft.Network/virtualNetworks/', parameters('VnetName'),'/subnets/', parameters('subnetName'))]",
    "JoinUser": "[concat(parameters('adminUsername'),'@',parameters('DomainFQDN'))]",
    "fileUris": "https://raw.githubusercontent.com/Romero05/Azure-WVD/main/Powershell/New-WVDSessionHostCusm.ps1",
    "UriFileNamePieces": "[split(variables('fileUris'), '/')]",
    "firstFileNameString": "[variables('UriFileNamePieces')[sub(length(variables('UriFileNamePieces')), 1)]]",
    "firstFileNameBreakString": "[split(variables('firstFileNameString'), '?')]",
    "firstFileName": "[variables('firstFileNameBreakString')[0]]",
    "Arguments": "[string(concat('-ProfilePath ', parameters('ProfilePath'), ' -RegistrationToken ', parameters('RegistrationToken'), ' -Optimize ', parameters('Optimize')))]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(variables('VMName'),copyIndex(),'-nic')]",
      "apiVersion": "2018-10-01",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "WVDNic-Copy",
        "count": "[parameters('Instance')]"
      },
      "tags": {
        "costcode": "AA-Money",
        "displayName": "WVD-Nic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[variables('subnetRef')]"
              },
              "privateIPAllocationMethod": "Dynamic"
            }
          }
        ]
      },
      "dependsOn": []
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(variables('VMName'),copyIndex(2))]",
      "apiVersion": "2019-03-01",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "WVD-Copy",
        "count": "[parameters('Instance')]"
      },
      "tags": {
        "costcode": "AA-Money",
        "displayName": "WVD-VM"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('VM_SIZES')[parameters('VMSize')].WVDsize]"
        },
        "storageProfile": {
          "osDisk": {
            "name": "[concat(variables('VMName'),copyIndex(),'-OSDisk')]",
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "StandardSSD_LRS"
            }
          },
          "imageReference": {
            "id": "[resourceId('Microsoft.Compute/galleries/images/versions',parameters('galleryName'),parameters('galleryImageDefinitionName'),parameters('galleryImageVersionName'))]"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('VMName'),copyIndex(),'-nic'))]"
            }
          ]
        },
        "osProfile": {
          "computerName": "[concat(variables('VMName'),copyIndex())]",
          "adminUsername": "[parameters('AdminUserName')]",
          "adminPassword": "[parameters('AdminPassword')]",
          "windowsConfiguration": {
            "enableAutomaticUpdates": true,
            "provisionVmAgent": true
          }
        },
        "licenseType": "Windows_Client"
      },
      "zones": [
        1
      ],
      "dependsOn": [
        "WVDNic-Copy"
      ]
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('VMName'),copyIndex(), '/joinDomain')]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "JoinDomain-Copy",
        "count": "[parameters('Instance')]"
      },
      "tags": {
        "displayName": "Join Domain"
      },
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "Name": "[parameters('DomainFQDN')]",
          "User": "[variables('JoinUser')]",
          "Restart": "true",
          "Options": "3"
        },
        "protectedSettings": {
          "Password": "[parameters('adminPassword')]"
        }
      },
      "dependsOn": [
        "WVD-Copy"
      ]
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('VMName'),copyIndex(),'/CustomScriptExtension')]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "Script-Copy",
        "count": "[parameters('Instance')]"
      },
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "CustomScriptExtension",
        "typeHandlerVersion": "1.9",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": [
            "[variables('fileUris')]"
          ]
        },
        "protectedSettings": {
          "commandToExecute": "[concat ('powershell -ExecutionPolicy Unrestricted -File ', variables('firstFileName'), ' ', variables('arguments'))]"
        }
      },
      "dependsOn": [
        "JoinDomain-Copy"
      ]
    }
  ],
  "outputs": {}
}
